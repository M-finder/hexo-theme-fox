<article class="article-detail">
    <div class="col-md-6 col-sm-12 col-xs-12 content-inner col-md-offset-3">
        <h1 class="article-title">
            <%= page.title %>
        </h1>

        <div class="post-info-box">
            <% if (page.categories && page.categories.length) { %>
                <span class="post-info">分类：</span>
                <%- list_categories(page.categories, {
                    show_count: false,
                    class: 'post-info post-info',
                    style: 'none',
                    separator: ''
                }) %>
            <% } %>
            <% if (page.tags && page.tags.length) { %>
                <span class="post-info">标签：</span>
                <%- list_tags(page.tags, {
                    show_count: false,
                    class: 'post-info post-info',
                    style: 'none',
                    separator: ''
                }) %>
            <% } %>
            <time class="post-info post-time" datetime="<%= page.date.toJSON() %>"><%= __('created_at') %>：<%= date(page.date) %></time>
            <% if(theme.wordcount === true){ %>
            <span class="post-info"><%= __('word_count') %>：<%= wordcount(page.content) %></span>
            <span class="post-info"><%= __('min2read') %>：<%= min2read(page.content) %> <%= __('minute') %></span>
            <% } %>
        </div>

        <div class="article-content">
            <%- page.content %>
        </div>

    </div>
    <% if(theme.article.toc === true){ %>
    <div class="post-page-title hidden-sm hidden-xs visible-md-block visible-lg-block">
        <div class="progress-title">
            You've read <span class="read-point">0</span>%
            <p class="progress"></p>
        </div>
        <%- toc(page.content) %>
    </div>
    <% } %>
</article>
<%- paginator() %>
